<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_card">

    <ImageView
        android:id="@+id/item_bottom_sheet_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_m"
        android:layout_marginStart="@dimen/margin_l"
        android:contentDescription="@string/cd_icon"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_bottom_sheet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_l"
        android:text="@string/cd_edit"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/item_bottom_sheet_icon"
        app:layout_constraintStart_toEndOf="@id/item_bottom_sheet_icon"
        app:layout_constraintTop_toTopOf="@id/item_bottom_sheet_icon" />

    <TextView
        android:id="@+id/item_bottom_sheet_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_l"
        android:background="@drawable/ripple_card_round"
        android:backgroundTint="@color/colorPrimary"
        android:includeFontPadding="false"
        android:padding="@dimen/margin_xs"
        android:textColor="@color/white"
        android:textSize="@dimen/font_xxs"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/item_bottom_sheet_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/item_bottom_sheet_title"
        app:layout_constraintTop_toTopOf="@id/item_bottom_sheet_title" />
</androidx.constraintlayout.widget.ConstraintLayout>